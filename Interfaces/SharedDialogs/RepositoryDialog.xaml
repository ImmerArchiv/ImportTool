<Window x:Class="Archiv10.Interfaces.SharedDialogs.RepositoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Archiv10.Interfaces.SharedDialogs"
        mc:Ignorable="d"
        Title="RepositoryDialog" SizeToContent="WidthAndHeight"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        >
       
       <StackPanel Margin="10">

         <Label Name="lblUrl">Url:</Label>
        <TextBox Name="txtUrl" MinWidth="250">https://</TextBox>
       
        <Label Name="lblName">Name:</Label>
        <TextBox Name="txtName" MinWidth="250">default</TextBox>

         <Label Name="lblToken">Token:</Label>
        <TextBox Name="txtToken" MinWidth="250"></TextBox>

            <WrapPanel HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
                <Button IsCancel="True" MinWidth="60">_Cancel</Button>
            </WrapPanel>
           
    </StackPanel>

</Window>
