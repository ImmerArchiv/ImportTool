<Window x:Class="Archiv10.Interfaces.ImportDialog.BagDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Archiv10.Interfaces.ImportDialog"
        mc:Ignorable="d"
        Title="BagDialog" SizeToContent="WidthAndHeight"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        >
    <StackPanel Margin="10">

        <Label Name="lblDescription">Beschreibung</Label>
        <TextBox x:Name="txtDescription" MinWidth="250" Text=""/>

        <WrapPanel HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>

    </StackPanel>
</Window>
